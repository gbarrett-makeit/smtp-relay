{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2019", "DOM"],
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "CommonJS"
  },
  "ts-node": {
    "compilerOptions": {
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"]
}
